<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SellModifyActivity"
    android:orientation="vertical"
    android:weightSum="8">

    <TextView
        android:id="@+id/titleSellModify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="글 수정"
        android:textStyle="bold"
        android:textColor="#ff4848"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/sellWriteImgView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/photo"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_weight="2"/>

    <Button
        android:id="@+id/btnImgReg"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="사진 등록"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textColor="#5b5b5b"
        android:background="@drawable/border_button"
        />

    <Spinner
        android:id="@+id/spinCategory"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginVertical="10dp"
        android:layout_weight="1"
        android:spinnerMode="dropdown"
        />

    <EditText
        android:id="@+id/edtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:hint="제목"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/edtWishPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:hint="희망가"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/edtWishOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:hint="희망옵션"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnSellModifyReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#5b5b5b"
        android:background="@drawable/border_button"
        android:text="수정 완료" />

</LinearLayout>